<view class="container">
  <view class="swiper">
    <swiper indicator-dots="false" autoplay="false" interval="5000" duration="1000">
        <swiper-item wx:for="{{imgUrls}}" wx:key="slide" wx:id="id" wx:if="{{item}}">
            <image src="{{item}}" class="slide-image" mode="aspectFill"/>
        </swiper-item>
    </swiper>
  </view>
</view>

